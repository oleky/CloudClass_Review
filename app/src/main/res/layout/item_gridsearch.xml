<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="258dp"
    android:layout_height="125dp"
    android:layout_gravity="center"
    android:background="@drawable/graybg"
    android:focusable="true"
    android:gravity="center"
    android:layout_margin="6dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/teacherpic_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="false"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/teacher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:focusable="false">

        <TextView
            android:id="@+id/id_yearname_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精越2015"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_termname_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_yearname_search"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:text="上学期（上）"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_gradename_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_termname_search"
            android:layout_toRightOf="@+id/id_termname_search"
            android:text="高一"
            android:layout_marginLeft="2dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_subjectname_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_gradename_search"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/id_gradename_search"
            android:text="数学"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_teachername_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_termname_search"
            android:layout_below="@+id/id_gradename_search"
            android:text=" 诗歌鉴赏以高分作文综合能力全面提升训练（上）"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_marginBottom="1dp"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>